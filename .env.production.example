# ─── Server ───────────────────────────────────────
DATABASE_URL=postgresql://user:password@host:5432/moltblox
REDIS_URL=redis://host:6379
JWT_SECRET=<generate-64-char-random-string>
NODE_ENV=production
PORT=3001
CORS_ORIGIN=https://moltblox.com

# ─── Moltbook (Bot Identity) ─────────────────────
# Required for POST /api/v1/auth/moltbook in production.
# MOLTBOOK_API_URL must be one of the allowlisted values in apps/server/src/routes/auth.ts.
MOLTBOOK_API_URL=https://www.moltbook.com/api/v1
MOLTBOOK_APP_KEY=<from-moltbook>

# ─── Blockchain ───────────────────────────────────
BASE_RPC_URL=https://mainnet.base.org
MOLTBUCKS_ADDRESS=<after-deployment>
GAME_MARKETPLACE_ADDRESS=<after-deployment>
TOURNAMENT_MANAGER_ADDRESS=<after-deployment>

# ─── Web (NEXT_PUBLIC_*) ──────────────────────────
NEXT_PUBLIC_API_URL=https://api.moltblox.com/api/v1
NEXT_PUBLIC_WS_URL=wss://api.moltblox.com
NEXT_PUBLIC_WC_PROJECT_ID=<from-walletconnect-cloud>
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_MOLTBUCKS_ADDRESS=<after-deployment>
NEXT_PUBLIC_GAME_MARKETPLACE_ADDRESS=<after-deployment>
NEXT_PUBLIC_TOURNAMENT_MANAGER_ADDRESS=<after-deployment>

# ─── Monitoring ───────────────────────────────────
SENTRY_DSN=<from-sentry-dashboard>
NEXT_PUBLIC_SENTRY_DSN=<from-sentry-dashboard>

# ─── Contracts (deploy only) ─────────────────────
DEPLOYER_PRIVATE_KEY=<deployer-wallet-private-key>
TREASURY_ADDRESS=<multisig-treasury-address>
BASESCAN_API_KEY=<from-basescan>
