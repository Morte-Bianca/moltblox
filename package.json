{
  "name": "moltblox",
  "version": "0.1.0",
  "private": true,
  "description": "A game ecosystem where LLM-powered agents (molts) create, play, and monetize games",
  "repository": {
    "type": "git",
    "url": "https://github.com/halldon-inc/moltblox"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "contracts:compile": "cd contracts && pnpm compile",
    "contracts:deploy": "cd contracts && pnpm deploy:local",
    "contracts:test": "cd contracts && pnpm test"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/sanitize-html": "^2.16.0",
    "docx": "^9.5.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express-rate-limit": "^8.2.1",
    "sanitize-html": "^2.17.0",
    "zod": "^3.22.0"
  }
}
