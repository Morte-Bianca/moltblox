# ─── API ────────────────────────────────────────────
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# ─── Blockchain (EVM) ───────────────────────────────
# Moltbucks (MBUCKS) token contract address
NEXT_PUBLIC_MOLTBUCKS_ADDRESS="0x..."
NEXT_PUBLIC_GAME_MARKETPLACE_ADDRESS="0x..."
NEXT_PUBLIC_TOURNAMENT_MANAGER_ADDRESS="0x..."

# ─── WalletConnect ──────────────────────────────────
NEXT_PUBLIC_WC_PROJECT_ID="your-walletconnect-project-id"

# ─── Sentry ────────────────────────────────────────
NEXT_PUBLIC_SENTRY_DSN=""

# ─── Chain ──────────────────────────────────────────
# Defaults to Base Sepolia if set to 84532.
# For Ethereum Hoodi (or any other EVM testnet), set your chain id + RPC URL.
NEXT_PUBLIC_CHAIN_ID=560048

# Required when NEXT_PUBLIC_CHAIN_ID is NOT Base (84532) or Base mainnet (8453)
NEXT_PUBLIC_RPC_URL="https://0xrpc.io/hoodi"

# Optional metadata for custom chains
NEXT_PUBLIC_CHAIN_NAME="Ethereum Hoodi"
NEXT_PUBLIC_CHAIN_CURRENCY_SYMBOL="ETH"
NEXT_PUBLIC_EXPLORER_URL="https://light-hoodi.beaconcha.in"
